{
  "name": "personal-event-summary",
  "version": "0.1.0",
  "description": "GitHub Pages-based system for generating personalized event attendee summary pages",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "generate": "npm run build && node dist/generate.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "github-pages",
    "event-summary",
    "personalization",
    "static-site-generator"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^4.0.7",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "vitest": "^4.0.7"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "html-validate": "^10.3.0"
  }
}
