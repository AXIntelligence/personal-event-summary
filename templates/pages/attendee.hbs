<!-- Sessions Section -->
<section class="sessions-section">
    <div class="container">
        <h2 class="section-title">Your Learning Journey</h2>
        <p class="section-subtitle">The sessions that shaped your {{event.name}} experience</p>

        <div class="sessions-list">
            {{#each attendee.sessions}}
            <div class="session-card">
                <div class="session-header">
                    <h3 class="session-title">{{this.title}}</h3>
                    {{#if this.track}}
                    <span class="session-track">{{this.track}}</span>
                    {{/if}}
                </div>
                <p class="session-description">{{this.description}}</p>
                <div class="session-meta">
                    <div class="session-speakers">
                        <span class="meta-icon">ğŸ¤</span>
                        <span>{{#each this.speakers}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</span>
                    </div>
                    <div class="session-duration">
                        <span class="meta-icon">â±ï¸</span>
                        <span>{{this.durationMinutes}} min</span>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<!-- Connections Section -->
{{#if attendee.connections.length}}
<section class="connections-section">
    <div class="container">
        <h2 class="section-title">Your Network Grew</h2>
        <p class="section-subtitle">Amazing people you connected with</p>

        <div class="connections-grid">
            {{#each attendee.connections}}
            <div class="connection-card">
                <div class="connection-avatar">
                    {{substring this.name 0 1}}
                </div>
                <div class="connection-info">
                    <h4 class="connection-name">{{this.name}}</h4>
                    <p class="connection-title">{{this.title}}</p>
                    <p class="connection-company">{{this.company}}</p>
                    {{#if this.linkedIn}}
                    <a href="{{this.linkedIn}}" class="connection-link" target="_blank" rel="noopener noreferrer">
                        Connect on LinkedIn â†’
                    </a>
                    {{/if}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
{{/if}}

<!-- Impact Section -->
<section class="impact-section">
